<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/client_id_edit_text"
        android:hint="@string/client_id_edit_text"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/client_name_edit_text"
        android:hint="@string/client_name_edit_text"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
         />

    <EditText
        android:id="@+id/product_name_edit_text"
        android:hint="@string/product_name_edit_text"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
         />

    <EditText
        android:id="@+id/product_price_edit_text"
        android:hint="@string/product_price_edit_text"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_gravity="top|end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        />

    <EditText
        android:id="@+id/product_quantity_edit_text"
        android:hint="@string/product_quantity_edit_text"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_gravity="top|end"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
       />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_text_view"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:hint="@string/view_text_view"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/client_text_view"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:hint="@string/client_text_view"/>
        <Button
            android:id="@+id/input_billing_button"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/input_billing_button" />

        <Button
            android:id="@+id/record_billing_button"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/record_billing_button" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/prev_button" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_button" />
    </LinearLayout>

</FrameLayout>